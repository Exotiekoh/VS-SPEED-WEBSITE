# VSSPEED.IO - Database Configuration

# MySQL Connection
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=vsspeed_production

# Database Pool Settings
DB_POOL_MIN=10
DB_POOL_MAX=100
DB_CONNECTION_TIMEOUT=5000

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=vsspeed-global.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=vsspeed-global
VITE_FIREBASE_STORAGE_BUCKET=vsspeed-global.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Email Configuration
SECURITY_EMAIL_USER=vsspeedsupport@exotiekoh.github.io
SECURITY_EMAIL_PASSWORD=your_email_app_password
SUPPORT_EMAIL=vsspeedsupport@exotiekoh.github.io

# Security Settings
ENABLE_LOGIN_ALERTS=true
ENABLE_ATTACK_DETECTION=true
ALERT_ON_NEW_IP=true
ALERT_ON_SUSPICIOUS_ACTIVITY=true

# Payment API Keys
VITE_STRIPE_PUBLIC_KEY=pk_test_...
VITE_COINBASE_API_KEY=your_coinbase_key
VITE_APPLE_PAY_MERCHANT_ID=merchant.com.vsspeed

# Encryption Keys
VITE_TRANSACTION_ENCRYPTION_KEY=generate_256bit_hex_key
VITE_BACKUP_ENCRYPTION_KEY=generate_256bit_hex_key

# JWT Secret
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=1h

# Node Environment
NODE_ENV=development
