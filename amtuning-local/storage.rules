rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ==========================================
    // ONLINE CACHE STORAGE
    // ==========================================

    // Cache directory - anyone can read, authenticated users can write
    match /cache/{cacheFile} {
      allow read: if true; // Public cache
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // User-specific cache
    match /user_cache/{userId}/{cacheFile} {
      allow read, write, delete: if isOwner(userId);
    }

    // Temporary files (auto-expire)
    match /temp/{tempFile} {
      allow read, write: if true;
      allow delete: if true;
    }

    // ==========================================
    // EXISTING STORAGE RULES
    // ==========================================

    // User profile images
    match /users/{userId}/profile/{imageFile} {
      allow read: if true;
      allow write: if isOwner(userId) && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB max
                      request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId);
    }

    // Vehicle images in garages
    match /garages/{garageId}/vehicles/{imageFile} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.resource.size < 10 * 1024 * 1024 && // 10MB max
                      request.resource.contentType.matches('image/.*');
      allow delete: if isAuthenticated();
    }

    // Encrypted backups (Cloud Functions only)
    match /backups/{backupFile} {
      allow read: if false;
      allow write: if false;
    }

    // Admin uploads
    match /admin/{adminFile} {
      allow read: if true;
      allow write: if isAuthenticated() && 
                      request.auth.token.email == 'vsspeedhq@gmail.com';
      allow delete: if isAuthenticated() && 
                       request.auth.token.email == 'vsspeedhq@gmail.com';
    }

    // Antigravity brain storage
    match /antigravity/{allPaths=**} {
      allow read, write: if isAuthenticated() && 
                            request.auth.token.email == 'vsspeedhq@gmail.com';
    }

    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
